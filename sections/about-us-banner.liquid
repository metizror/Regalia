{{ 'about-us.css' | asset_url | stylesheet_tag: preload: true }}

{%- style -%}
  #section-{{ section.id }} {
    padding-left: 15px;
    padding-right: 15px;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  #section-{{ section.id }} .banner-container.custom-width {
    width: 100%;
    margin: 0 auto;
    max-width: {{ section.settings.container_max_width }}px;
  }
  #section-{{ section.id }} .banner-main-heading{
      color: {{ section.settings.main_heading_color }};
  }
  #section-{{ section.id }} .banner-text{
      max-width: {{ section.settings.inner_max_width }}px;
  }
  #section-{{ section.id }} .banner-text .subheading{
      color: {{ section.settings.sub_heading_color }};
  }
  #section-{{ section.id }} .banner-text .description{
      color: {{ section.settings.description_color }}
  }

  @media screen and (max-width: 767px) {
    #section-{{ section.id }} .banner-main-heading {
      text-align: {{ section.settings.heading_align_mob }};
    }
  }
    @media screen and (min-width: 768px) {
    #section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #section-{{ section.id }} .banner-main-heading {
      text-align: {{ section.settings.heading_align_desk }};
    }
    #section-{{ section.id }} .banner-content img {
      height: {{ section.settings.background_height }}px;
    }
  }
{%- endstyle -%}

<section id="section-{{ section.id }}" class="about-us-banner">
  <div class="banner-container {% if section.settings.full_width %}full-width{% else %}custom-width{% endif %}">
    <h2 class="banner-main-heading">
      {{ section.settings.main_heading }}
    </h2>

    <div class="banner-content">
      <picture>
        {% if section.settings.background_image_mob != blank %}
          <source
            media="(max-width: 767px)"
            srcset="{{ section.settings.background_image_mob | image_url: width: 768 }}"
          >
        {% endif %}

        <source
          media="(min-width: 768px)"
          srcset="{{ section.settings.background_image | image_url: width: section.settings.background_image.width }}"
        >

        <img
          src="{{ section.settings.background_image | image_url }}"
          alt="{{ section.settings.background_image.alt | default: 'Banner Image' }}"
          width="{{ section.settings.background_image.width }}"
          height="{{ section.settings.background_height }}"
          loading="lazy"
          style="width: 100%; object-fit: cover;"
        >
      </picture>

      <div class="banner-overlay"></div>
      <div class="banner-text d-{{ section.settings.text_position_desk | replace: ' ', '-' }} m-{{ section.settings.text_position_mob | replace: ' ', '-' }}">
        <{{ section.settings.subheading_size }} class="subheading">
          {{- section.settings.sub_heading -}}
        </{{ section.settings.subheading_size }}>
        <span class="description {{ section.settings.desc_size }}">{{ section.settings.description }}</span>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About us banner",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "range",
      "id": "container_max_width",
      "label": "Custom max width (px)",
      "min": 600,
      "max": 1600,
      "step": 10,
      "default": 1180
    },
    {
      "type": "range",
      "id": "inner_max_width",
      "label": "Text container max width (px)",
      "min": 400,
      "max": 1400,
      "step": 10,
      "default": 1180
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main heading",
      "default": "The World of Regalia"
    },
    {
      "type": "select",
      "id": "heading_align_desk",
      "label": "Main heading alignment (Desktop)",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "heading_align_mob",
      "label": "Main heading alignment (Mobile)",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color",
      "id": "main_heading_color",
      "label": "Main heading color",
      "default": "#082A32"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (Desktop)"
    },
    {
      "type": "range",
      "id": "background_height",
      "label": "Background image height (px)",
      "min": 300,
      "max": 600,
      "step": 10,
      "default": 570,
      "info": "On mobile, height will auto adapt."
    },
    {
      "type": "image_picker",
      "id": "background_image_mob",
      "label": "Background image (Mobile)"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub heading",
      "default": "A Legacy of Elegance"
    },
    {
      "type": "color",
      "id": "sub_heading_color",
      "label": "Sub heading color",
      "default": "#797979"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "At Regalia, we believe jewelry is more than a beautiful accessory - itâ€™s a symbol of personal power, timeless elegance, and unforgettable moments. Each piece in our collection is designed to reflect sophistication, confidence, and grace."
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description text color",
      "default": "#797979"
    },
    {
      "type": "select",
      "id": "text_position_desk",
      "label": "Text alignment (Desktop)",
      "default": "bottom left",
      "options": [
        { "value": "top left", "label": "Top left" },
        { "value": "top center", "label": "Top center" },
        { "value": "top right", "label": "Top right" },
        { "value": "middle left", "label": "Middle left" },
        { "value": "middle center", "label": "Middle center" },
        { "value": "middle right", "label": "Middle right" },
        { "value": "bottom left", "label": "Bottom left" },
        { "value": "bottom center", "label": "Bottom center" },
        { "value": "bottom right", "label": "Bottom right" }
      ]
    },
    {
      "type": "select",
      "id": "text_position_mob",
      "label": "Text alignment (Mobile)",
      "default": "bottom left",
      "options": [
        { "value": "top left", "label": "Top left" },
        { "value": "top center", "label": "Top center" },
        { "value": "top right", "label": "Top right" },
        { "value": "middle left", "label": "Middle left" },
        { "value": "middle center", "label": "Middle center" },
        { "value": "middle right", "label": "Middle right" },
        { "value": "bottom left", "label": "Bottom left" },
        { "value": "bottom center", "label": "Bottom center" },
        { "value": "bottom right", "label": "Bottom right" }
      ]
    },
    {
      "type": "select",
      "id": "subheading_size",
      "label": "Subheading font size",
      "default": "h3",
      "options": [
        { "value": "h4", "label": "Small" },
        { "value": "h3", "label": "Medium" },
        { "value": "h2", "label": "Large" }
      ]
    },
    {
      "type": "select",
      "id": "desc_size",
      "label": "Description font size",
      "default": "h5",
      "options": [
        { "value": "h5", "label": "Small" },
        { "value": "h4", "label": "Medium" },
        { "value": "h3", "label": "Large" }
      ]
    },
    {
      "type": "header",
      "content": "Section vertical spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "About us banner"
    }
  ]
}
{% endschema %}
