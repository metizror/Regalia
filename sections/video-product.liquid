      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "video-product",
      "name": "Video product",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Custom video URL"
        },
        {
          "type": "product",
          "id": "video_product",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video product"
    }
  ]
}
