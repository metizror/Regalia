{{ 'component-footer.css' | asset_url | stylesheet_tag: preload: true }}

{%- style -%}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .footer-content{
    background-color:{{ section.settings.bg_color }};
  }
  @media(max-width: 767px){
    #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}
<section class="section footer-section">
  <div class="footer-content">
    <div class="container nav-social-wrap">
      {% if section.settings.social_icons %}
        <div class="social-media-icon" ms-aos data-ms-delay="200">
          {% render 'social-icons' %}
        </div>
      {% endif %}

      {%- if shop.features.follow_on_shop? and section.settings.enable_follow_on_shop -%}
        <div class="footer__follow-on-shop">
          {% comment %} TODO: enable theme-check once `login_button` is accepted as valid filter {% endcomment %}
          {% # theme-check-disable %}
          {{ shop | login_button: action: 'follow' }}
          {% # theme-check-enable %}
        </div>
      {%- endif -%}

      <div class="footer-bottom-change" ms-aos data-ms-delay="200">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'logo-information' %}
              <div class="logo-info-content">
                <div class="logo-address">
                  {% if block.settings.logo %}
                    <a href="{{ shop.url }}" class="logo">
                      <img
                        src="{{ block.settings.logo  | image_url: width: block.settings.logo.width }}"
                        alt="{{ block.settings.logo.alt | default: shop.name }}"
                        width="{{ block.settings.logo.width }}"
                        height="{{ block.settings.logo .height }}"
                        style="--object-position: {{ block.settings.logo.presentation.focal_point }}"
                        loading="lazy"
                      >
                    </a>
                  {% else %}
                    <div class="footer-logo">
                      {{ shop.name }}
                    </div>
                  {% endif %}
                </div>
                <div class="text-content">
                  <span class="h6">{{ block.settings.text_data }}</span>
                </div>
                {% for i in (1..3) %}
                  {% assign logo_key = 'info_logo_' | append: i %}
                  {% assign lnfo_key = 'info_data_' | append: i %}
                  <div class="icon-info-content">
                    {% if block.settings[logo_key] %}
                      {% assign iconsfooter = block.settings[logo_key] %}
                      <div class="info-icon">
                        <span class="social-icon">
                          {% render 'icons', icon: iconsfooter %}
                        </span>
                      </div>
                    {% endif %}
                    {% if block.settings[lnfo_key] %}
                      <div class="info-data">
                        <p>{{ block.settings[lnfo_key] }}</p>
                      </div>
                    {% endif %}
                  </div>
                {% endfor %}
              </div>
            {% when 'navigation' %}
              <div class="footer-navigation">
                <div class="navigation-content">
                  <span class="h3 footer-menu-heading">{{ block.settings.menu_title }}</span>
                  <nav role="navigation">
                    <ul>
                      {%- for link in block.settings.main_menu.links -%}
                        <li>
                          <a
                            href="{{ link.url }}"
                            {% if link.active %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ link.title }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  </nav>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>

    <div class="privacy-policy-text">
      <div class="dotted-line"></div>
      <div class="container">
        {%- if section.settings.show_policy -%}
          <ul class="policies list-unstyled" ms-aos data-ms-delay="200">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <li>
                  <small class="copyright__content"
                    ><a href="{{ policy.url }}">{{ policy.title | escape }}</a></small
                  >
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}

        <div class="policy-languageselector" ms-aos data-ms-delay="200">
          <div class="policy-text d-flex">
            <small class="copyright__content">
              &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: '/' }}
              {{ powered_by_link }}
            </small>
          </div>
          <div class="card-languageselector">
            <div class="card-image">
              {%- if section.settings.payment_enable -%}
                <div class="footer-payment">
                  <ul class="list list-payment d-flex" role="list">
                    {%- for type in shop.enabled_payment_types -%}
                      <li class="list-payment__item">
                        {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                      </li>
                    {%- endfor -%}
                  </ul>
                </div>
              {% endif %}
            </div>
            <div class="language-country-footer">
              <div class="language-content">
                <div class="language-location-content">
                  <div class="localization-country footer-language">
                    <div class="languagecontent">
                      {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                        <div>
                          {%- render 'language-localization', localPosition: 'HeaderLanguage' -%}
                        </div>
                      {%- endif -%}
                    </div>
                    <div class="desktop-localization-wrapper">
                      <localization-form class="small-hide medium-hide" data-prevent-hide>
                        {%- form 'localization', id: 'HeaderLanguageForm', class: 'localization-form' -%}
                          <div>
                            {%- render 'country-localization', localPosition: 'HeaderLanguage' -%}
                          </div>
                        {%- endform -%}
                      </localization-form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{%- if settings.back_to_top -%}
  {%- render 'back-to-top' -%}
{%- endif -%}

<script src="{{ 'footer.js' | asset_url }}" type="text/javascript" defer></script>
{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "tag": "footer",
  "blocks": [
    {
      "type": "logo-information",
      "name": "Store information",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Store logo"
        },
        {
          "type": "inline_richtext",
          "id": "text_data",
          "label": "Store information"
        },
        {
          "type": "text",
          "id": "info_logo_1",
          "label": "Info icon one"
        },
        {
          "type": "inline_richtext",
          "id": "info_data_1",
          "label": "Info text one"
        },
        {
          "type": "text",
          "id": "info_logo_2",
          "label": "Info icon two"
        },
        {
          "type": "inline_richtext",
          "id": "info_data_2",
          "label": "Info text two"
        },
        {
          "type": "text",
          "id": "info_logo_3",
          "label": "Info icon three"
        },
        {
          "type": "inline_richtext",
          "id": "info_data_3",
          "label": "Info text three"
        }
      ]
    },
    {
      "type": "navigation",
      "name": "Navigation",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "menu_title",
          "label": "Menu title"
        },
        {
          "type": "link_list",
          "id": "main_menu",
          "label": "Quick menu"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 20
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#082A32"
    },
    {
      "type": "checkbox",
      "id": "social_icons",
      "label": "Social icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_follow_on_shop",
      "label": "Enable follow on shop",
      "default": true
    },
    {
      "type": "color_background",
      "id": "hr_line",
      "label": "Background",
      "default": "linear-gradient(#ffffff, #000000)"
    },
    {
      "type": "inline_richtext",
      "id": "policy_text",
      "label": "Policy text"
    },
    {
      "type": "header",
      "content": "Country/region selector",
      "info": "To add a country/region, go to your [market settings.](/admin/settings/markets)"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "default": false,
      "label": "Enable country/region selector"
    },
    {
      "type": "header",
      "content": "Language selector",
      "info": "To add a language, go to your [language settings.](/admin/settings/languages)"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "default": false,
      "label": "Enable language selector"
    },
    {
      "type": "checkbox",
      "id": "payment_enable",
      "default": true,
      "label": "Store payment"
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "default": true,
      "label": "Show policy"
    }
  ]
}
{% endschema %}
