{%- style -%}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  .faq-content .faq-heading{
    color: {{ section.settings.heading_color }};
  }
  @media(max-width: 768px){
    #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top | times: 0 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

{{ 'component-faq.css' | asset_url | stylesheet_tag: preload: true }}

<section class="faq-section">
  <div class="faq-wrapper">
    <div class="faq-container {% if section.settings.image_position == 'right' %} reverse{% endif %}">
      <lazy-image class="faq-image" ms-aos data-ms-delay="100">
        {%- if section.settings.image -%}
          <img src="{{ section.settings.image | image_url: width: section.settings.image.width }}" 
            alt="FAQ Image"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            style="--object-position: {{ section.settings.image.presentation.focal_point }}"
            loading="lazy">
        {%- else -%}
          <lazy-image>
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </lazy-image>
        {%- endif -%}
      </lazy-image>
      <div class="faq-content">
        {%- if section.settings.title -%}
          <{{ section.settings.heading_size }} tabindex="0" class="faq-heading text-{{ section.settings.heading_alignment }}" ms-aos data-ms-delay="100">{{ section.settings.title }}</{{ section.settings.heading_size }}>
        {%- endif -%}
        <div class="faq-items">
          {% for faq in section.blocks %}
            {%- if faq.settings.question != blank and faq.settings.answer != blank -%}
              <div  tabindex="0" class="faq-item-wrapper" ms-aos data-ms-delay={{ forloop.index0 | times: 150 }}>
                <div tabindex="-1" class="faq-question">
                  <div class="faq-icon-wrapper">
                    <span class="faq-icon">
                      {%- if faq.settings.faq_icon -%}
                        <img src="{{ faq.settings.faq_icon | image_url: width: faq.settings.faq_icon.width }}" 
                          alt="FAQ Icon"
                          width="{{ faq.settings.faq_icon.width }}"
                          height="{{ faq.settings.faq_icon.height }}"
                        >
                      {%- endif -%}
                    </span>
                    {%- if faq.settings.question -%}
                      <span tabindex="0" class="faq-qa">{{ faq.settings.question }}</span>
                    {%- endif -%}
                  </div>
                  <span class="faq-toggle">
                    {% render 'down-arrow' %}
                  </span>
                </div>
                <div class="faq-answer">
                     <div aria-label="{{ faq.settings.answer }}" tabindex="0">
                  {%- if faq.settings.answer -%}
                    {{ faq.settings.answer }}
                  {%- endif -%}
                     </div>
                </div>
              </div>
            {%- endif -%}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<script src="{{ 'component-faq.js' | asset_url }}" type="text/javascript" defer></script>


{% schema %}
{
  "name": "FAQ",
  "class": "section section-faq",
  "tag": "section",
  "max_blocks": 5,
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type":"header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "FAQ"
    },
    {
      "type": "header",
      "content": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Size",
      "options": [
        {
          "value": "h1",
          "label": "Extra large"
        },
        {
          "value": "h2",
          "label": "Large"
        },
        {
          "value": "h3",
          "label": "Medium"
        },
        {
          "value": "h4",
          "label": "Small"
        },
        {
          "value": "h5",
          "label": "Extra small"
        },
        {
          "value": "h6",
          "label": "Tiny"
        }
      ],
      "default": "h3"
    },
    {
      "type": "header",
      "content": "Alignment"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color"
    },
    {
      "type": "header",
      "content": "Section vertical spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "image_picker",
          "id": "faq_icon",
          "label": "FAQ icon"
        },
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "settings": {
        "title": "FAQ",
        "heading_size": "h3"
      },
      "blocks": [
        {
          "type": "faq",
        },
        {
          "type": "faq",
        },
        {
          "type": "faq",
        },
        {
          "type": "faq",
        }
      ]
    }
  ]
}
{% endschema %}