{%- style -%}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media(max-width: 768px){
    #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

{{ 'component-marquee.css' | asset_url | stylesheet_tag:preload: true }}

<div class="marquee-wrapper">
  <div class="marquee" style="animation-duration: {{ section.settings.speed | times: 0.1 }}s; {% if section.settings.reverse %}direction: rtl;{% endif %} loop:infinite">
    <div class="marquee-content">
      {%- for block in section.blocks -%}
        <div class="marquee-item">
          {%- if block.settings.content -%}
            <span class="marquee-text h2">{{ block.settings.content }}</span>
          {%- endif -%}
        </div>
        <span class="marquee-separator">{%- render 'marquee-icon' -%}</span>
      {%- endfor -%}
      <!-- Duplicate content for seamless scrolling -->
      {%- for block in section.blocks -%}
        <div class="marquee-item">
          {%- if block.settings.content -%}
            <span class="marquee-text">{{ block.settings.content }}</span>
          {%- endif -%}
        </div>
        <span class="marquee-separator">{%- render 'marquee-icon' -%}</span>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Marquee text",
  "class": "section section-marquee-text",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "range",
      "id": "speed",
      "label": "Marquee speed",
      "default": 50,
      "min": 10,
      "max": 300,
      "step": 10
    },
    {
      "type": "checkbox",
      "id": "reverse",
      "label": "Reverse direction",
      "default": false
    },
    {
      "type": "header",
      "content": "Section vertical spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text block",
      "settings": [
        {
          "type": "text",
          "id": "content",
          "label": "Text",
          "default": "Your marquee text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee section"
    }
  ]
}
{% endschema %}