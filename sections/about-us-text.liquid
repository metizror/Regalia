{%- style -%}
  #section-{{ section.id }} {
    padding-left: 15px;
    padding-right: 15px;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  #section-{{ section.id }} .text-container{
    background-color: {{ section.settings.bg_color }};
  }
  #section-{{ section.id }} .text-container.custom-width{
    width: 100%;
    margin: 0 auto;
    max-width: {{ section.settings.container_max_width }}px;
  }
  #section-{{ section.id }} .text-columns{
    width: 100%;
    max-width: {{ section.settings.inner_max_width }}px;
  }
  #section-{{ section.id }} .text-column.heading h2{
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_font_size }}px;
  }
  #section-{{ section.id }} .text-column.description p{
    color: {{ section.settings.description_color }};
    font-size: {{ section.settings.description_size }}px;
  }
  @media screen and (min-width: 768px) {
    #section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #section-{{ section.id }} .text-column.heading{
      max-width: {{ section.settings.heading_column_width }}%;
      align-items: {{ section.settings.heading_align_desk }};
    }
    #section-{{ section.id }} .text-column.description{
      max-width: {{ section.settings.description_column_width }}%;
      text-align: {{ section.settings.desc_align_desk }};
    }
  }
  @media screen and (max-width: 767px) {
    #section-{{ section.id }} .text-column.heading{
      text-align: {{ section.settings.heading_align_mob }};
    }
    #section-{{ section.id }} .text-column.description{
      text-align: {{ section.settings.desc_align_mob }};
    }
  }
{%- endstyle -%}

<section id="section-{{ section.id }}" class="about-us-text">
  <div class="text-container {% if section.settings.full_width %}full-width{% else %}custom-width{% endif %}">
    <div class="text-columns {% if section.settings.heading_first == true %}heading-first{% else %}heading-last{% endif %}">
      <div class="text-column heading">
        <h2>{{ section.settings.heading }}</h2>
      </div>
      {% if section.settings.show_separator_mob == true %}
        <div class="separator-mob" style="width: 100%;">
          <hr style="border: none; border-bottom: 1px solid {{ section.settings.separator_color }};">
        </div>
      {% endif %}
      <div class="text-column description">
        <p>{{ section.settings.description }}</p>
      </div>
    </div>
    {% if section.settings.show_separator_desk == true %}
      <div class="separator-desk" style="width: 100%;">
        <hr style="border: none; border-bottom: 1px solid {{ section.settings.separator_color }};">
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "About us text",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Page settings"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "range",
      "id": "container_max_width",
      "label": "Custom max width (px)",
      "min": 600,
      "max": 1600,
      "step": 10,
      "default": 1210
    },
    {
      "type": "range",
      "id": "inner_max_width",
      "label": "Text container max width (px)",
      "min": 600,
      "max": 1600,
      "step": 10,
      "default": 1180
    },
    {
      "type": "header",
      "content": "Text section settings"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "heading_first",
      "label": "Show heading first",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our story"
    },
    {
      "type": "html",
      "id": "description",
      "label": "Description",
      "default": "Founded in 2020, Regalia began with a vision: to create jewelry that honors tradition while embracing modern luxury. What started as a small design studio has grown into a globally admired brand known for refined craftsmanship and timeless beauty."
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#082A32"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description text color",
      "default": "#797979"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading font size (px)",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 24
    },
    {
      "type": "range",
      "id": "description_size",
      "label": "Description text font size (px)",
      "min": 12,
      "max": 30,
      "step": 1,
      "default": 16
    },
    {
      "type": "select",
      "id": "heading_align_desk",
      "label": "Heading alignment (desktop)",
      "default": "flex-end",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" }
      ]
    },
    {
      "type": "select",
      "id": "heading_align_mob",
      "label": "Heading alignment (mobile)",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "desc_align_desk",
      "label": "Description alignment (desktop)",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "desc_align_mob",
      "label": "Description text alignment (mobile)",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "heading_column_width",
      "label": "Heading column width (%)",
      "min": 10,
      "max": 90,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "id": "description_column_width",
      "label": "Description column width (%)",
      "min": 10,
      "max": 90,
      "step": 1,
      "default": 70
    },
    {
      "type": "checkbox",
      "id": "show_separator_desk",
      "label": "Show separator line (desktop)",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_separator_mob",
      "label": "Show separator line (mobile)",
      "default": true
    },
    {
      "type": "color",
      "id": "separator_color",
      "label": "Separator color",
      "default": "#FBF5F0"
    },
    {
      "type": "header",
      "content": "Section vertical spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "About us text"
    }
  ]
}
{% endschema %}
