{%- style -%}
  #shopify-section-{{ section.id }}{
    --bg_color: {{ section.settings.bg_color }};
    --txt_color: {{ section.settings.text_color }};
    --heading_color: {{ section.settings.heading_color }};
  }
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  {%- for block in section.blocks -%}
    #shopify-section-{{ section.id }} .block-{{ block.id }}.gradient-text-wrapper h2 {
      background-image: {{ block.settings.background_gradient }};
    }
  {%- endfor -%}
  @media(max-width: 767px){
    #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

{{ 'component-richtext.css' | asset_url | stylesheet_tag: preload: true }}

<div class="container {% if section.settings.full_width %}full-width{% endif %} align--{{ section.settings.alignment }}">
  <div class="rich-text-wrap">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'gradient' -%}
          {%- if block.settings.gradient_text != blank -%}
            <div class="gradient-text-wrapper block-{{ block.id }}" >
              <h2 class="{{ block.settings.gradient_text_size }} gradient-text" ms-aos data-ms-delay="100">
                {{ block.settings.gradient_text | escape }}
              </h2>
            </div>
          {%- else -%}
            <div class="gradient-text-wrapper block-{{ block.id }}" >
              <h2 class="{{ block.settings.gradient_text_size }} gradient-text" ms-aos data-ms-delay="100">
              {{ shop.name }}
              </h2>
            </div>
          {%- endif -%}
        {%- endcase -%}
        <div class="rich-text-wrapper">
          {%- case block.type -%}
          {%- when 'heading' -%}
            {%- if block.settings.heading_text != blank -%}
              <div class="rich-heading">
                <h2 class="{{ block.settings.heading_size }}" ms-aos data-ms-delay="200">{{ block.settings.heading_text }}</h2>
              </div>
            {%- endif -%}

          {%- when 'subheading' -%}
            {%- if block.settings.subheading_text != blank -%}
              <div class="rich-subheading" ms-aos data-ms-delay="300">
                <p class="h5">{{ block.settings.subheading_text }}</p>
              </div>
            {%- endif -%}

          {%- when 'description' -%}
            {%- if block.settings.content_text != blank -%}
              <div class="rich-description {{ block.settings.text_size }}" ms-aos data-ms-delay="400">
                {{ block.settings.content_text }}
              </div>
            {%- endif -%}
          
          {%- when 'button' -%}
            {%- if block.settings.btn != blank -%}
              <div class="rich-btn" ms-aos data-ms-delay="500">
                <a href="{{ block.settings.btn_link }}" class="btn {{ block.settings.btn_style }}" {% if block.settings.is_newpage %}target="_blank"{% endif %}> {{ block.settings.btn }} </a>
              </div>
            {%- endif -%}
          {%- endcase -%}
        </div>
    {%- endfor -%}
  </div>
</div>
{% schema %}
{
  "name": "Richtext",
  "class": "section-richtext",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Show in full width",
      "default": false
    },
    {
      "type": "header",
      "content": "Customization"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color"
    },
    {
      "type": "header",
      "content": "Section vertical spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "gradient",
      "name": "Gradient text",
      "settings": [
        {
          "type": "text",
          "id": "gradient_text",
          "label": "Title",
          "info": "For best results, keep this text short."
        },
        {
          "type": "select",
          "id": "gradient_text_size",
          "label": "Size",
          "options": [
            {
              "value": "h2",
              "label": "Large"
            },
            {
              "value": "h3",
              "label": "Medium"
            },
            {
              "value": "h4",
              "label": "Small"
            }
          ],
          "default": "h2"
        },
        {
          "type": "header",
          "content": "Colors",
          "info": "Gradient replaces solid colors when set. Gradient text outline and gradient background cannot be combined."
        },
        {
          "type": "color_background",
          "id": "background_gradient",
          "label": "Background gradient"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading_text",
          "label": "Text",
          "default": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Size",
          "options": [
            {
              "value": "h2",
              "label": "Large"
            },
            {
              "value": "h3",
              "label": "Medium"
            },
            {
              "value": "h4",
              "label": "Small"
            }
          ],
          "default": "h3"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        {
          "type": "textarea",
          "id": "subheading_text",
          "label": "Subheading"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "settings": [
        {
          "type": "richtext",
          "id": "content_text",
          "label": "Content",
          "default": "<p>Add content here</p>"
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Size",
          "options": [
            {
              "value": "h4",
              "label": "Large"
            },
            {
              "value": "h5",
              "label": "Medium"
            },
            {
              "value": "h6",
              "label": "Small"
            }
          ],
          "default": "h6"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "btn",
          "label": "Text",
          "info": "Leave button blank to hide."
        },
        {
          "type": "url",
          "id": "btn_link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "btn_style",
          "label": "Style",
          "options": [
            {
              "value": "btn-primary",
              "label": "Primary"
            },
            {
              "value": "btn-secondary",
              "label": "Secondary"
            }
          ],
          "default": "btn-primary"
        },
        {
          "type": "checkbox",
          "id": "is_newpage",
          "label": "Opens in new page",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Richtext",
      "settings": {
      },
      "blocks": [
        {
          "type": "gradient"
        },
        {
          "type": "heading"
        },
        {
          "type": "description"
        }
      ]
    }
  ]
}
{% endschema %}