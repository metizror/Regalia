{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{{ 'component-contact.css' | asset_url | stylesheet_tag: preload: true }}

<section class="contact-form section-{{ section.id }}-padding">
  <div class="contact-wrapper" style="background-color: {{ section.settings.section_bg_color }};">
    <div class="{% if section.settings.layout == 'container' %}container {% elsif section.settings.layout == 'container-narrow' %} container-narrow {% endif %}contact-form-wrap"> 

      {%- if section.settings.img_bottom_left != blank -%}
        <div class="coll-bg-image bottom-left">
          <lazy-image>
            <img src="{{ section.settings.img_bottom_left | image_url: width: section.settings.img_bottom_left.width }}"
              alt="{{ section.settings.img_bottom_left.alt }}"
              width="{{ section.settings.img_bottom_left.width }}"
              height="{{ section.settings.img_bottom_left.height }}"
              loading="lazy">
          </lazy-image>
        </div>
      {%- endif -%}

        <div class="image-wrap">
        
          {%- if section.settings.image != blank -%}
            <div class="form-img">
              <img src="{{ section.settings.image | image_url: width: section.settings.image.width }}"
                alt="{{ section.settings.image.alt }}"
                width="{{ section.settings.image.width }}"
                height="{{ section.settings.image.height }}"
                loading="lazy"
                style="--object-position:{{ section.settings.image.presentation.focal_point }}">
            </div>
            
                {%- if section.settings.vector_top_right != blank -%}
                  <div class="vector-top-right">
                    <lazy-image>
                      <img src="{{ section.settings.vector_top_right | image_url: width: section.settings.vector_top_right.width }}"
                        alt="{{ section.settings.vector_top_right.alt }}"
                        width="{{ section.settings.vector_top_right.width }}"
                        height="{{ section.settings.vector_top_right.height }}"
                        loading="lazy">
                    </lazy-image>
                  </div>
                {% endif %}

                {%- if section.settings.vector_bottom_left != blank -%}
                  <div class="vector-bottom-left">
                    <lazy-image>
                      <img src="{{ section.settings.vector_bottom_left | image_url: width: section.settings.vector_bottom_left.width }}"
                        alt="{{ section.settings.vector_bottom_left.alt }}"
                        width="{{ section.settings.vector_bottom_left.width }}"
                        height="{{ section.settings.vector_bottom_left.height }}"
                        loading="lazy">
                    </lazy-image>
                  </div>
                {% endif %}
          
          {% else %}
            <lazy-image>
            {{ 'image'| placeholder_svg_tag: 'placeholder-svg' }}
            </lazy-image>
          {%- endif -%}
        
        </div>
        <div class="form-wrap"> 

          {% if section.settings.heading != blank %}
            <div class="form-heading" style="color:{{ section.settings.heading_color }}">
                <h2>{{ section.settings.heading }}</h2> 
            </div>
          {% endif %}

          <form method="post" action="/contact" class="contact-us-form">
            <div class="form-group">                
                <input type="text" id="name" name="contact[name]" placeholder="Whatâ€™s your good name" required>
                {% render 'icons', icon: 'user' %}
            </div>            
            <div class="form-group">         
                <input type="email" id="email" name="contact[email]" placeholder="Enter your email" required>
                {% render 'icons', icon: 'mail' %}
            </div>            
            <div class="form-group">                 
                <input type="tel" id="phone" name="contact[phone]" placeholder="Enter your phone number" required>
                {% render 'icons', icon: 'contact-phone' %}
            </div>            
            <div class="form-group">                      
                <textarea id="message" name="contact[body]" placeholder="Enter your message" required></textarea>
                {% render 'icons', icon: 'message' %}
            </div>            
            <div class="form-group checkbox-group">
                <input type="checkbox" id="terms" name="terms" required>
               <label for="terms"><span class="h6">I agree with the <a href="/policies/terms-of-service" target="_blank">terms & conditions</a>.</span></label>
            </div>            
            <button type="submit" class="submit-button" 
              style="color:{{ section.settings.btn_text_color }};
               border:1px solid {{ section.settings.btn_border_color }};
                background:{{ section.settings.btn_bg_color }};"> 
                 {{ section.settings.button_text }}</button>
          </form>
                  
        </div>       
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact form",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "container",
          "label": "1440px"
        },
        {
          "value": "container-narrow",
          "label": "910px"
        }
      ],
      "default": "container",
      "label": "Desktop layout"
    },
      {
      "type": "color",
      "id": "section_bg_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Form content"
    }, 
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select form image"
    },
    {
        "type": "text",
        "id": "heading",
        "default": "Let's talk to us!",
        "label": "Heading"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#082A32",
      "label": "Heading color"
    },
    {
      "type": "header",
      "content": "Button"
    }, 
    {
      "type": "text",
      "id": "button_text",
      "default": "Send message",
      "label": "Button text"
  },
  {
    "type": "color",
    "id": "btn_text_color",
    "default": "#797979",
    "label": "Text color"
  },
  {
    "type": "color",
    "id": "btn_bg_color",
    "default": "#FFFFFF",
    "label": "Background color"
  },
  {
    "type": "color",
    "id": "btn_border_color",
    "default": "#797979",
    "label": "Border color"
  },
  
    {
      "type": "header",
      "content": "Section card customization"
    }, 
    {
      "type": "image_picker",
      "id": "img_bottom_left",
      "label": "Container image bottom left"
    },
    {
      "type": "image_picker",
      "id": "vector_top_right",
      "label": "Vector top right",
      "info": "Please use transparent image."
    },
    {
      "type": "image_picker",
      "id": "vector_bottom_left",
      "label": "Vector bottom left",
      "info": "Please use transparent image."
    },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top padding",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom padding",
        "default": 36
      }
  ],
  "presets": [
    {
      "name": "Contact form"
    }
  ]
}
{% endschema %}
