{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-top: {{ section.settings.padding_top }}px;
  }
  @media screen and (max-width: 767px){
    #shopify-section-{{ section.id }} {
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

{{ '404.css' | asset_url | stylesheet_tag: preload: true }}

<div class="main-404-wrapper">
  <div class="container-narrow">
    <div class="four_zero_four_bg">
      <h1 ms-aos data-ms-delay="100">{{ '404.page_heading' | t }}</h1>
      {%- if section.settings.bg_image -%}
        <lazy-image class="img-404" ms-aos data-ms-delay="200">
          <img
            src="{{ section.settings.bg_image | image_url: width: section.settings.bg_image.width }}" 
            alt="{{ section.settings.bg_image.alt | default: shop.name }}" 
            width="{{ section.settings.bg_image.width }}" 
            height="{{ section.settings.bg_image.height }}"
            loading="lazy"
          />
        </lazy-image>
      {%- endif -%}
      <div class="contant_box_404">
        <h3 ms-aos data-ms-delay="300">{{ '404.title' | t }}</h3>
        <p ms-aos data-ms-delay="400">{{ '404.content' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="link_404 btn btn-primary" ms-aos data-ms-delay="400">{{ '404.continue_shopping' | t }}</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main_404.name",
    "tag": "section",
    "class": "section-404",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "t:sections.main_404.settings.background_image.label"
      },
      {
        "type": "header",
        "content": "t:sections.general.section_vertical_spacing.content"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 50,
        "step": 2,
        "unit": "px",
        "label": "t:sections.general.section_vertical_spacing.top_padding.label",
        "default": 20
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 50,
        "step": 2,
        "unit": "px",
        "label": "t:sections.general.section_vertical_spacing.bottom_padding.label",
        "default": 20
      }
    ]
  }
{% endschema %}